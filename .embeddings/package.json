{
  "name": "plexmcp-embeddings",
  "version": "1.0.0",
  "description": "Semantic code search for PlexMCP using Ollama embeddings",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "index": "npm run build && node dist/cli.js index",
    "search": "npm run build && node dist/cli.js search",
    "watch": "npm run build && node dist/watcher.js",
    "mcp-server": "npm run build && node dist/mcp-server.js",
    "stats": "node dist/cli.js stats",
    "dev": "tsc --watch",
    "install-hooks": "bash scripts/install-hooks.sh",
    "daily-update": "bash scripts/daily-update.sh",
    "cr": "coderabbit --prompt-only",
    "cr:uncommitted": "coderabbit --prompt-only --type uncommitted",
    "cr:committed": "coderabbit --prompt-only --type committed",
    "cr:full": "coderabbit --prompt-only --base main"
  },
  "bin": {
    "plexmcp-search": "./dist/cli.js"
  },
  "keywords": [
    "embeddings",
    "code-search",
    "ollama",
    "mcp",
    "semantic-search",
    "rag"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "faiss-node": "^0.5.1",
    "glob": "^11.0.0",
    "ollama": "^0.5.11"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
