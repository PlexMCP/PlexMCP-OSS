# =============================================================================
# PlexMCP Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Minimum to boot the stack
# -----------------------------------------------------------------------------

# Database connection (used by Docker Compose)
DATABASE_URL=postgres://plexmcp:password@localhost:5432/plexmcp

# Security keys - MUST be unique per deployment
# Generate with: openssl rand -hex 32
JWT_SECRET=
API_KEY_HMAC_SECRET=

# TOTP encryption key - exactly 64 hex chars required
# Generate with: openssl rand -hex 32 (produces 64 hex chars)
TOTP_ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# OPTIONAL - Feature integrations (uncomment to enable)
# -----------------------------------------------------------------------------

# Redis - defaults to localhost:6379 if not set
# REDIS_URL=redis://localhost:6379

# Email notifications (Resend)
# RESEND_API_KEY=re_xxxxx

# Stripe billing (COMMERCIAL/HOSTED ONLY - ignored in self-hosted mode)
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx
# STRIPE_PRICE_ID_STARTER=price_xxxxx
# STRIPE_PRICE_ID_PRO=price_xxxxx

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------

# Set to 'true' for self-hosted deployments (removes tier limits)
PLEXMCP_SELF_HOSTED=true
